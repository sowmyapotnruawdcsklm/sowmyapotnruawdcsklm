 

#include<stdio.h>
int main()
{ int a,x,y,rem,sum=0,count=1;
 printf("enter your number:");
 scanf("%d",&a);
 printf("enter x value and y value");
 scanf("%d %d",&x,&y);
 while(a>0)
 { rem=a%10;
  (x==rem)?(sum=sum+(y*count)):(sum=sum+(rem*count));
  count=count*10;
a=a/10;
}
printf("%d",sum);
return 0;

}
